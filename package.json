  "bugs": {
    "url": "https://github.com/nafeu/facture/issues"
  },
  "homepage": "https://github.com/nafeu/facture#readme",
  "dependencies": {
    "commander": "^12.0.0",
    "js-yaml": "^4.1.0",
    "puppeteer": "^22.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
